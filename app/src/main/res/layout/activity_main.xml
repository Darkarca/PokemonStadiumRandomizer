<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/background0"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/p1r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/p1p1"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <ImageView
                android:id="@+id/p1p2"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <ImageView
                android:id="@+id/p1p3"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/player1" />

            <TextView
                android:id="@+id/p1wins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wins: "
                android:textColor="@android:color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/p1r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/p1p4"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <ImageView
                android:id="@+id/p1p5"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <ImageView
                android:id="@+id/p1p6"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <Button
                android:id="@+id/p1win"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Winner!" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/p2r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/p2p1"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <ImageView
                android:id="@+id/p2p2"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <ImageView
                android:id="@+id/p2p3"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/player2" />

            <TextView
                android:id="@+id/p2wins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wins: "
                android:textColor="@android:color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/p2r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/p2p4"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <ImageView
                android:id="@+id/p2p5"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <ImageView
                android:id="@+id/p2p6"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_transparent_pokeball" />

            <Button
                android:id="@+id/p2win"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Winner!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pokeName"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:text="Pokemon"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/focusedPKMN"
                    android:layout_width="186dp"
                    android:layout_height="186dp"
                    app:srcCompat="@drawable/ic_transparent_pokeball" />

                <TextView
                    android:id="@+id/hp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HP:" />

                <TextView
                    android:id="@+id/att"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attack:" />

                <TextView
                    android:id="@+id/def"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Defense:" />

                <TextView
                    android:id="@+id/spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Special:" />

                <TextView
                    android:id="@+id/spd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Speed:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:text="Pokemon"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/att1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attack1:"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/att2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attack2"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/att3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attack3"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/att4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attack4"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/randomize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:scaleType="center"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_pokeball" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:scaleType="center"
        app:backgroundTint="@android:color/transparent"
        app:layout_anchor="@+id/randomize"
        app:layout_anchorGravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/randomize"
        app:srcCompat="@drawable/stadiumlogo" />

</android.support.constraint.ConstraintLayout>